CREATE TABLE UserRole ( roleId INT AUTO_INCREMENT NOT NULL, role VARCHAR (10), PRIMARY KEY (roleId));
INSERT INTO UserRole (role) VALUES ('admin'), ('user');
CREATE TABLE Status (statusId INT AUTO_INCREMENT NOT NULL, status VARCHAR (10) NOT NULL, PRIMARY KEY (statusId));
INSERT INTO Status (status) VALUES ('active'), ('inactive');
CREATE TABLE User (userId INT AUTO_INCREMENT NOT NULL, name VARCHAR (50) NOT NULL, birthday DATE NOT NULL, roleId INT NOT NULL, login VARCHAR (50) NOT NULL, password VARCHAR (30) NOT NULL, statusId INT NOT NULL, PRIMARY KEY (userID), FOREIGN KEY (roleId) REFERENCES UserRole (roleId), FOREIGN KEY (statusId) REFERENCES Status (statusId));
INSERT INTO User (name, birthday, roleId, login, password, statusId) values ('Mark', '1996-11-23', 1, 'mark23', '23mark23', 1), ('Tom', '1980-10-02', 2, 'tom40', '40tom40', 1), ('Jhon', '1991-08-12', 2, 'jhon33', '33jhon33', 1), ('Bobby', '1969-07-10', 2, 'bobby55', '55bobby55', 1);
CREATE TABLE UserRaiting (userRaitingId INT AUTO_INCREMENT NOT NULL, userId INT NOT NULL, userRaiting TINYINT NOT NULL, PRIMARY KEY (userRaitingId), FOREIGN KEY (userId) REFERENCES User (userId));
INSERT INTO UserRaiting (userId, userRaiting) VALUES (1, 9), (3, 8), (2, 10);
CREATE TABLE Genre (genreID INT AUTO_INCREMENT NOT NULL, genre VARCHAR (30) NOT  NULL, PRIMARY KEY (genreID));
INSERT INTO Genre (genre) VALUES ('Action'), ('Adventure'), ('Comedy'), ('Crime'), ('Drama'), ('Fantasy'), ('Historical'), ('Historical fiction'), ('Horror'),	('Magical realism'), ('Mystery'), ('Philosophical'), ('Political'), ('Romance'), ('Satire'), ('Science fiction'), ('Thriller'), ('Western');
CREATE TABLE Actor (actorId INT AUTO_INCREMENT NOT NULL, name VARCHAR (50) NOT  NULL, birthday DATE NOT NULL, PRIMARY KEY (actorId));
INSERT INTO Actor (name, birthday) VALUES ('Arnold Alois Schwarzenegger', '1947-07-30'), ('Sam Worthington', '1976-08-02');
CREATE TABLE Director (directorId INT AUTO_INCREMENT NOT NULL, name VARCHAR (50) NOT  NULL, birthday DATE NOT NULL, PRIMARY KEY (directorId));
INSERT INTO Director (name, birthday) VALUES ('James Cameron', '1954-08-16'), ('Joseph McGinty Nichol', '1968-08-09');
CREATE TABLE  Film (filmId INT AUTO_INCREMENT NOT NULL, name VARCHAR (50) NOT NULL, genreId INT NOT NULL, releaseDate Date NOT NULL, actorId INT NOT NULL, directorId INT NOT NULL, statusId INT NOT NULL, PRIMARY KEY (filmId), FOREIGN KEY (genreId) REFERENCES Genre (genreId), FOREIGN KEY (actorId) REFERENCES Actor (actorId), FOREIGN KEY (directorId) REFERENCES Director (directorId), FOREIGN KEY (statusId) REFERENCES Status (statusId));
INSERT INTO Film (name, genreId, releaseDate, actorId, directorId, statusId) values ('Terminator', 1, '1984-10-26', 1, 1, 1), ('Terminator 2', 1, '1991-06-03', 1, 1, 1), ('Terminator 3', 1, '2003-07-02', 1, 1, 1), ('Terminator 4', 1, '2009-05-21', 2, 2, 1);
CREATE TABLE Review (reviewId INT AUTO_INCREMENT NOT NULL, filmId INT NOT NULL, userId INT NOT NULL, review VARCHAR (300) NOT NULL, reviewDate DATETIME, PRIMARY KEY (reviewId), FOREIGN KEY (filmId) REFERENCES Film (filmId), FOREIGN KEY (userId) REFERENCES User (userId));
INSERT INTO Review (filmId, userId, review, reviewDate) VALUES ( 1, 1, 'As always, the first film is the birst from sequels', NOW()), ( 3, 1, 'Not bad. I am satisfied=)', NOW()), ( 2, 3, 'I am happy. Arnold is thr best actor I have ever seen', NOW());
CREATE TABLE FilmRaiting (raitingId INT AUTO_INCREMENT NOT NULL, filmId INT NOT NULL, userId INT NOT NULL, raiting INT NOT NULL, PRIMARY KEY (raitingId), FOREIGN KEY (filmId) REFERENCES Film (filmId), FOREIGN KEY (userId) REFERENCES User (userId));
INSERT INTO FilmRaiting (filmId, userId, raiting) VALUES (1, 1, 9), (1, 3, 8), (3, 2, 10);
